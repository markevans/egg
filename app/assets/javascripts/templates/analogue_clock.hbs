<svg height="{{height}}">
   <circle cx="{{radius}}" cy="{{radius}}" r="{{radius}}" stroke="black" stroke-width="2" fill="white" />
   <line x1="{{radius}}" y1="{{radius}}" x2="{{hours.x}}" y2="{{hours.y}}" stroke="black" stroke-width="3" />
   <line x1="{{radius}}" y1="{{radius}}" x2="{{minutes.x}}" y2="{{minutes.y}}" stroke="black" stroke-width="2" />
   <line x1="{{radius}}" y1="{{radius}}" x2="{{seconds.x}}" y2="{{seconds.y}}" stroke="black" stroke-width="1" />
</svg> 
